<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="Work_winui_.User.Generatepage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Work_winui_.User"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalAlignment="Center">
        <StackPanel Padding="40,20,40,40" MaxWidth="1400" MinWidth="1000" HorizontalAlignment="Center">
            <!-- Header Section -->
            <TextBlock Text="Create New Jobsheet" 
                       FontSize="28" 
                       FontWeight="SemiBold"
                       Margin="0,0,0,10"/>
            
            <!-- Breadcrumb -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,30">
                <TextBlock Text="Home" Foreground="{ThemeResource TextFillColorSecondaryBrush}" FontSize="12"/>
                <TextBlock Text=" > " Foreground="{ThemeResource TextFillColorSecondaryBrush}" FontSize="12" Margin="4,0"/>
                <TextBlock Text="Jobsheets" Foreground="{ThemeResource TextFillColorSecondaryBrush}" FontSize="12"/>
                <TextBlock Text=" > " Foreground="{ThemeResource TextFillColorSecondaryBrush}" FontSize="12" Margin="4,0"/>
                <TextBlock Text="Create New" FontSize="12"/>
            </StackPanel>

            <!-- Heater Type Selection -->
            <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="24"
                    Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="HEATER TYPE" 
                               FontSize="14"
                               FontWeight="SemiBold"
                               Margin="0,0,0,12"/>
                    <ComboBox x:Name="HeaterTypeComboBox"
                              PlaceholderText="SELECT HEATER TYPE"
                              SelectionChanged="HeaterTypeComboBox_SelectionChanged"
                              SelectedIndex="0"
                              HorizontalAlignment="Stretch"
                              MinWidth="300"
                              PointerWheelChanged="OnPointerWheelChangedSuppressScroll">
                        <ComboBoxItem Content="SELECT"/>
                        <ComboBoxItem Content="HIGH DENSITY CARTRIDGE HEATER"/>
                    </ComboBox>
                </StackPanel>
            </Border>

            <!-- High Density Cartridge Heater Form -->
            <Grid x:Name="CartridgeHeaterForm" Visibility="Collapsed">
                <StackPanel Spacing="20">
                    
                    <!-- Job Details Section -->
                    <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                            BorderThickness="1"
                            CornerRadius="8"
                            Padding="24">
                        <StackPanel Spacing="16">
                            <TextBlock Text="Job Details" 
                                       FontSize="16"
                                       FontWeight="SemiBold"/>
                            
                            <Grid ColumnSpacing="16">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                

                                <!-- Customer Name -->
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Customer Name" FontSize="13" Margin="0,0,0,6"/>
                                    <TextBox x:Name="CustomerNameTextBox" PlaceholderText="Enter customer name"/>
                                </StackPanel>
                                
                                <!-- Order Number -->
                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="Order No" FontSize="13" Margin="0,0,0,6"/>
                                    <TextBox x:Name="OrderNoTextBox" PlaceholderText="Enter order number"/>
                                </StackPanel>
                                
                                <!-- Date -->
                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="Date" FontSize="13" Margin="0,0,0,6"/>
                                    <DatePicker x:Name="DatePicker" HorizontalAlignment="Stretch"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Technical Specifications Section -->
                    <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                            BorderThickness="1"
                            CornerRadius="8"
                            Padding="24">
                        <StackPanel Spacing="16">
                            <TextBlock Text="Technical Specifications" 
                                       FontSize="16"
                                       FontWeight="SemiBold"/>
                            
                            <!-- Row 1: Basic Dimensions -->
                            <Grid ColumnSpacing="16">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Diameter" FontSize="13" Margin="0,0,0,6"/>
                                    <Grid>
                                        <TextBox x:Name="DiameterTextBox" PlaceholderText="e.g. 12.5" Padding="12,8,40,8"/>
                                        <TextBlock Text="mm" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,12,0" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                    </Grid>
                                </StackPanel>
                                
                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="Length" FontSize="13" Margin="0,0,0,6"/>
                                    <Grid>
                                        <TextBox x:Name="LengthTextBox" PlaceholderText="e.g. 150" Padding="12,8,40,8"/>
                                        <TextBlock Text="mm" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,12,0" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                    </Grid>
                                </StackPanel>
                                
                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="Watts" FontSize="13" Margin="0,0,0,6"/>
                                    <Grid>
                                        <TextBox x:Name="WattsTextBox" PlaceholderText="e.g. 250" Padding="12,8,40,8"/>
                                        <TextBlock Text="W" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,12,0" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                    </Grid>
                                </StackPanel>
                                
                                <StackPanel Grid.Column="3">
                                    <TextBlock Text="Volts" FontSize="13" Margin="0,0,0,6"/>
                                    <Grid>
                                        <TextBox x:Name="VoltsTextBox" PlaceholderText="e.g. 220" Padding="12,8,40,8"/>
                                        <TextBlock Text="V" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,12,0" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                    </Grid>
                                </StackPanel>
                            </Grid>
                            
                            <!-- Row 2: Process Dimensions -->
                            <Grid ColumnSpacing="16">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Diameter after process" FontSize="13" Margin="0,0,0,6"/>
                                    <Grid>
                                        <TextBox x:Name="DiameterAfterProcessTextBox" IsReadOnly="True" PlaceholderText="Auto calculated" Padding="12,8,70,8"/>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Spacing="4" Margin="0,0,8,0">
                                            <TextBlock Text="mm" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                            <Button Width="24" Height="24" Padding="0" Background="Transparent" BorderThickness="0" Click="EditButton_Click">
                                                <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE70F;" FontSize="12"/>
                                            </Button>
                                        </StackPanel>
                                    </Grid>
                                </StackPanel>
                                
                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="Diameter after machining" FontSize="13" Margin="0,0,0,6"/>
                                    <Grid>
                                        <TextBox x:Name="DiameterAfterMachiningTextBox" IsReadOnly="True" PlaceholderText="Auto calculated" Padding="12,8,70,8"/>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Spacing="4" Margin="0,0,8,0">
                                            <TextBlock Text="mm" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                            <Button Width="24" Height="24" Padding="0" Background="Transparent" BorderThickness="0" Click="EditButton_Click">
                                                <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE70F;" FontSize="12"/>
                                            </Button>
                                        </StackPanel>
                                    </Grid>
                                </StackPanel>
                                
                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="Tube Diameter" FontSize="13" Margin="0,0,0,6"/>
                                    <Grid>
                                        <TextBox x:Name="TubeDiameterTextBox" IsReadOnly="True" PlaceholderText="Auto calculated" Padding="12,8,70,8"/>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Spacing="4" Margin="0,0,8,0">
                                            <TextBlock Text="mm" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                            <Button Width="24" Height="24" Padding="0" Background="Transparent" BorderThickness="0" Click="EditButton_Click">
                                                <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE70F;" FontSize="12"/>
                                            </Button>
                                        </StackPanel>
                                    </Grid>
                                </StackPanel>
                                
                                <StackPanel Grid.Column="3">
                                    <TextBlock Text="Tube Thickness" FontSize="13" Margin="0,0,0,6"/>
                                    <Grid>
                                        <TextBox x:Name="TubeThicknessTextBox" IsReadOnly="True" PlaceholderText="Auto calculated" Padding="12,8,70,8"/>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Spacing="4" Margin="0,0,8,0">
                                            <TextBlock Text="mm" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                            <Button Width="24" Height="24" Padding="0" Background="Transparent" BorderThickness="0" Click="EditButton_Click">
                                                <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE70F;" FontSize="12"/>
                                            </Button>
                                        </StackPanel>
                                    </Grid>
                                </StackPanel>
                            </Grid>
                            
                            <!-- Row 3: Terminal Details -->
                            <Grid ColumnSpacing="16">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Type of Terminal" FontSize="13" Margin="0,0,0,6"/>
                                    <TextBox x:Name="TerminalTypeTextBox" PlaceholderText="e.g. M3 Lead"/>
                                </StackPanel>
                                
                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="Terminal Style" FontSize="13" Margin="0,0,0,6"/>
                                    <TextBox x:Name="TerminalStyleTextBox" PlaceholderText="e.g. Standard"/>
                                </StackPanel>
                                
                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="Batch No" FontSize="13" Margin="0,0,0,6"/>
                                    <TextBox x:Name="BatchNoTextBox" PlaceholderText="Enter batch number"/>
                                </StackPanel>
                                
                                <StackPanel Grid.Column="3">
                                    <TextBlock Text="Quantity" FontSize="13" Margin="0,0,0,6"/>
                                    <TextBox x:Name="QuantityTextBox" PlaceholderText="e.g. 100"/>
                                </StackPanel>
                            </Grid>
                            
                            <!-- Row 4: Additional Specifications -->
                            <Grid ColumnSpacing="16">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Total Length" FontSize="13" Margin="0,0,0,6"/>
                                    <TextBox x:Name="NewField1TextBox" PlaceholderText="Enter total length"/>
                                </StackPanel>
                                
                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="Top Insulator" FontSize="13" Margin="0,0,0,6"/>
                                    <TextBox x:Name="NewField2TextBox" PlaceholderText="Enter top insulator"/>
                                </StackPanel>
                                
                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="Bottom Insulator" FontSize="13" Margin="0,0,0,6"/>
                                    <TextBox x:Name="NewField3TextBox" PlaceholderText="Enter bottom insulator"/>
                                </StackPanel>
                                
                                <StackPanel Grid.Column="3">
                                    <TextBlock Text="Silicon Spacer" FontSize="13" Margin="0,0,0,6"/>
                                    <TextBox x:Name="NewField4TextBox" PlaceholderText="Enter silicon spacer"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Advanced Specs Section -->
                    <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                            BorderThickness="1"
                            CornerRadius="8"
                            Padding="24">
                        <StackPanel Spacing="16">
                            <TextBlock Text="Advanced Specs" 
                                       FontSize="16"
                                       FontWeight="SemiBold"/>
                            
                            <!-- Row 1 -->
                            <Grid ColumnSpacing="16">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="MGO Insulator Lot No" FontSize="13" Margin="0,0,0,6"/>
                                    <TextBox x:Name="MgoInsulatorLotNoTextBox" PlaceholderText="Enter lot number"/>
                                </StackPanel>
                                
                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="SS Tube Grade" FontSize="13" Margin="0,0,0,6"/>
                                    <TextBox x:Name="SsTubeGradeTextBox" PlaceholderText="e.g. SS316"/>
                                </StackPanel>
                                
                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="Pitch" FontSize="13" Margin="0,0,0,6"/>
                                    <Grid>
                                        <TextBox x:Name="PitchTextBox" IsReadOnly="True" PlaceholderText="Auto calculated" Padding="12,8,70,8"/>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Spacing="4" Margin="0,0,8,0">
                                            <TextBlock Text="mm" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                            <Button Width="24" Height="24" Padding="0" Background="Transparent" BorderThickness="0" Click="EditButton_Click">
                                                <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE70F;" FontSize="12"/>
                                            </Button>
                                        </StackPanel>
                                    </Grid>
                                </StackPanel>
                                
                                <StackPanel Grid.Column="3">
                                    <TextBlock Text="No of Turns" FontSize="13" Margin="0,0,0,6"/>
                                    <TextBox x:Name="NoOfTurnsTextBox" PlaceholderText="e.g. 25"/>
                                </StackPanel>
                            </Grid>
                            
                            <!-- Row 2 -->
                            <Grid ColumnSpacing="16">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="MGO Powder Lot No" FontSize="13" Margin="0,0,0,6"/>
                                    <TextBox x:Name="MgoPowderLotNoTextBox" PlaceholderText="Enter lot number"/>
                                </StackPanel>
                                
                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="SS Tube Batch No" FontSize="13" Margin="0,0,0,6"/>
                                    <TextBox x:Name="SsTubeBatchNoTextBox" PlaceholderText="Enter batch number"/>
                                </StackPanel>
                                
                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="MGO Tube" FontSize="13" Margin="0,0,0,6"/>
                                    <TextBox x:Name="MgoTubeTextBox" PlaceholderText="Enter MGO tube spec"/>
                                </StackPanel>
                                
                                <StackPanel Grid.Column="3">
                                    <TextBlock Text="MGO End Insulators Lot No" FontSize="13" Margin="0,0,0,6"/>
                                    <TextBox x:Name="MgoEndInsulatorsLotNoTextBox" PlaceholderText="Enter lot number"/>
                                </StackPanel>
                            </Grid>
                            
                            <!-- Row 3 -->
                            <Grid ColumnSpacing="16">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Resistance Wire Part No" FontSize="13" Margin="0,0,0,6"/>
                                    <TextBox x:Name="ResistanceWirePartNoTextBox" PlaceholderText="Enter part number"/>
                                </StackPanel>
                                
                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="Terminal Wire Lot No" FontSize="13" Margin="0,0,0,6"/>
                                    <TextBox x:Name="TerminalWireLotNoTextBox" PlaceholderText="Enter lot number"/>
                                </StackPanel>
                                
                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="Resistance Coil Wire (SWG)" FontSize="13" Margin="0,0,0,6"/>
                                    <Grid>
                                        <TextBox x:Name="ResistanceCoilWireTextBox" IsReadOnly="True" PlaceholderText="Auto calculated SWG" Padding="12,8,40,8"/>
                                        <Button Width="24" Height="24" Padding="0" Background="Transparent" BorderThickness="0" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,8,0" Click="EditButton_Click">
                                            <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE70F;" FontSize="12"/>
                                        </Button>
                                    </Grid>
                                </StackPanel>
                                
                                <StackPanel Grid.Column="3">
                                    <TextBlock Text="Job Incharge" FontSize="13" Margin="0,0,0,6"/>
                                    <TextBox x:Name="JobInchargeTextBox" PlaceholderText="Enter person in charge"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Action Buttons -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="12">

                        <Button Content="Calculate"
                                Width="120"
                                Height="40"
                                Style="{StaticResource DefaultButtonStyle}"
                                Click="CalculateButton_Click"/>

                        <Button Content="Save Jobsheet"
                                x:Name="CreateButton"
                                Width="140"
                                Height="40"
                                Style="{StaticResource AccentButtonStyle}"
                                Click="CreateButton_Click"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </StackPanel>
    </ScrollViewer>
</UserControl>
