<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="Work_winui_.User.Settings"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Work_winui_.User"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalAlignment="Center">
        <StackPanel Padding="40,20,40,40" MaxWidth="1400" MinWidth="1000" HorizontalAlignment="Center">
            <!-- Header -->
            <TextBlock Text="Settings Page" 
                       FontSize="28" 
                       FontWeight="SemiBold"
                       Margin="0,0,0,30"/>

            <!-- Upload Settings Section -->
            <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="24"
                    Margin="0,0,0,20">
                <StackPanel Spacing="16">
                    <TextBlock Text="Upload Settings" 
                               FontSize="16" 
                               FontWeight="SemiBold"/>

                    <!-- Endpoints -->
                    <StackPanel>
                        <TextBlock Text="Endpoints" 
                                   FontSize="13"
                                   Margin="0,0,0,6"/>
                        <TextBox x:Name="EndpointsTextBox"
                                 PlaceholderText="https://api.example.com/endpoint"
                                 HorizontalAlignment="Stretch"/>
                    </StackPanel>

                    <!-- Api Key -->
                    <StackPanel>
                        <TextBlock Text="Api Key" 
                                   FontSize="13"
                                   Margin="0,0,0,6"/>
                        <PasswordBox x:Name="ApiKeyPasswordBox"
                                     PlaceholderText="Enter API Key"
                                     HorizontalAlignment="Stretch"/>
                    </StackPanel>

                    <!-- Credentials - Username -->
                    <StackPanel>
                        <TextBlock Text="Credentials" 
                                   FontSize="13"
                                   Margin="0,0,0,6"/>
                        <TextBox x:Name="UsernameTextBox"
                                 PlaceholderText="Username"
                                 HorizontalAlignment="Stretch"
                                 Margin="0,0,0,12"/>

                        <!-- Credentials - Password -->
                        <PasswordBox x:Name="CredentialsPasswordBox"
                                     PlaceholderText="Password"
                                     HorizontalAlignment="Stretch"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Path Settings Section -->
            <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="24"
                    Margin="0,0,0,20">
                <StackPanel Spacing="16">
                    <TextBlock Text="Path Settings" 
                               FontSize="16" 
                               FontWeight="SemiBold"/>

                    <!-- Template Folder Path -->
                    <StackPanel>
                        <TextBlock Text="Template Folder Path" 
                                   FontSize="13"
                                   Margin="0,0,0,6"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBox x:Name="TemplatePathTextBox"
                                     Grid.Column="0"
                                     IsReadOnly="True"    
                                     PlaceholderText="Select a folder..."
                                     Margin="0,0,12,0"/>
                            <Button Grid.Column="1"
                                    Content="Browse"
                                    MinWidth="120"
                                    Click="TemplateBrowseBrowseButton_Click" />
                        </Grid>
                    </StackPanel>

                    <!-- PDF Folder Path -->
                    <StackPanel>
                        <TextBlock Text="PDF Folder Path" 
                                   FontSize="13"
                                   Margin="0,0,0,6"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBox x:Name="PDFPathTextBox"
                                     Grid.Column="0"
                                     IsReadOnly="True"
                                     PlaceholderText="Select a folder..."
                                     Margin="0,0,12,0"/>
                            <Button Grid.Column="1"
                                    Content="Browse"
                                    MinWidth="120"
                                    Click="PDFBrowseButton_Click" />
                        </Grid>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Formula Settings Section -->
            <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="24"
                    Margin="0,0,0,0">
                <StackPanel Spacing="16">
                    <TextBlock Text="Formula Settings" 
                               FontSize="16" 
                               FontWeight="SemiBold"/>

                    <!-- Password for the formulae -->
                    <StackPanel>
                        <TextBlock Text="Password for the formulae" 
                                   FontSize="13"
                                   Margin="0,0,0,6"/>
                        <PasswordBox x:Name="FormulaPasswordBox"
                                     PlaceholderText="Enter password"
                                     HorizontalAlignment="Stretch"
                                     Margin="0,0,0,16"/>
                    </StackPanel>

                    <!-- Action Buttons -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="12">
                        <Button x:Name="CancelButton"
                                Content="Cancel"
                                Width="120"
                                Height="40"
                                Click="CancelButton_Click"/>
                        <Button x:Name="SaveChangesButton"
                                Content="Save Changes"
                                Width="140"
                                Height="40"
                                Style="{StaticResource AccentButtonStyle}"
                                Click="SaveChangesButton_Click"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>